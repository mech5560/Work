/* 
This Function gives to all the elements of the
array the value 0
*/


void Initial_Zero( double ***Speed_X, int ldz, int ldy, int ldx, 
		  int lz, int rz, int ly, int ry, int lx, int rx)
{

  for (int k=-lz; k<ldz+rz; k++)
    {
      for (int j=-ly; j<ldy+ry; j++)
	{
	  for (int i=-lx; i<ldx+rx; i++)
	    {
	      Speed_X[k][j][i] =0.0;

	    }

	}

    }

}

